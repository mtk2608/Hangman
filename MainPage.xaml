<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hangman.MainPage">

    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="{Binding Message}" FontSize="30" TextColor="Black" HorizontalTextAlignment="Center"/>
            <Image Source="{Binding CurrentImage}" HorizontalOptions="Center" HeightRequest="300" />
            <Label FontAttributes="Bold" FontSize="30" HorizontalOptions="Center" Text="{Binding Spotlight}"/>
            <Entry x:Name="GuessBox" Placeholder="Enter Guess" HorizontalOptions="Center" />
            <Label Text="{Binding GameStatus}" FontSize="20" HorizontalTextAlignment="Center" />
            <Button x:Name="Guess" Text="Guess" Clicked="Guess_Clicked" VerticalOptions="Center" CornerRadius="50" HeightRequest="60" WidthRequest="300" BackgroundColor="Orange" BorderColor="Black" BorderWidth="2"/>
            <ImageButton Clicked="Reset_Clicked" HeightRequest="100" WidthRequest="300" CornerRadius="50" Source="reset.png" Margin="0,50,0,0"/>
        </StackLayout>
    </ScrollView>

</ContentPage>
